BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            font_size: 20
            size_hint_x: 0.3
            on_press: app.clear_fields()
        TextInput:
            id: input_name
            text: ''
            font_size: 20
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Greet'
            font_size: 20
            size_hint_x: 0.3
            on_press: app.handle_greet()
        Label:
            id: output_label
            text: "Enter your name"
            font_size: 20
            color: (1, 1, 0, 1)