BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            font_size: 50
#            text: '0'
            multiline: False
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: '+1'
                font_size: 25
                on_press: app.handle_increment(1)
            Button:
                text: '-1'
                font_size: 25
                on_press: app.handle_increment(-1)

#    Button:
#        text: 'Convert m to km'
#        font_size: 25
#        on_press: app.handle_convert()

    Label:
        id: km_output
        font_size: 50
        color: (1, 1, 0, 1)
        text: app.km_output