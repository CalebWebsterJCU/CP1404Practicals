BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Clear"
            font_size: 20
            size_hint_x: 0.3
            on_press: app.clear_input_output()
        TextInput:
            id: score_input
            font_size: 50
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Calculate\nGrade"
            font_size: 20
            size_hint_x: 0.3
            on_press: app.handle_display_grade()
        Label:
            id: grade_output
            text: app.grade_output_text
            font_size: 50